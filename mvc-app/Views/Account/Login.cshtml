@using mvc_app.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div>
        <p>
            <h4>Log in to your account</h4>
        </p>
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label for="EmailAddress" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="EmailAddress" aria-describedby="emailHelp" asp-for="EmailAddress">
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        <div id="EmailAddress" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3">
                        <label for="Password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="Password" aria-describedby="emailHelp" asp-for="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                    <div class="form-group">
                        <input class="btn btn-outline-success float right" type="submit" value="Log in" />
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
                    </div>
                </form>
</div>