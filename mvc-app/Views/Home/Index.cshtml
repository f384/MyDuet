    <section>
        <div class="container">
            @if (Model.Studios == null)
            {
                <h1 class="fw-light">
                    There are no music studios in your area! <a asp-area="" asp-controller="Account"
                                                                asp-action="Login">Login</a> and create one!
                </h1>
            }
            else
            {
                <div class="row justify-content-between mb-5">
                    <div class="col-auto">
                        <h3>Music studios near @Model.City, @Model.State</h3>
                    </div>
                    <!--end of col-->
                    <div class="col-auto">
                        <a href="#" class="btn btn-outline-primary">View all</a>
                    </div>
                    <!--end of col-->
                </div>
                <div class="row">
                    @foreach (var item in Model.Studios)
                    {
                        <div class="col">
                            <div class="card shadow-sm">
                                <img width="100%" height="225" src="@item.Image" /><text x="50%" y="50%" fill="#eceeef" dy=".3em" class="h3 m-2">@item.Title</text>
                                <div class="card-body">
                                    <p class="card-text">@item.Description</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="Studio" asp-action="Detail" asp-route-id="@item.Id">More</a>
                                            @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                            {
                                                <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="Studio" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                                <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="Studio" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                            }


                                        </div>
                                        <small class="text-body-secondary">@item.StudioCategory</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            <!--end of row-->
        </div>
        <!--end of container-->
    </section>
